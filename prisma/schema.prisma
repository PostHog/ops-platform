generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Employee {
  id       Int      @id @default(autoincrement())
  name     String
  priority String
  reviewer String
  notes    String
  reviewd  Boolean
  salaries Salary[]
}

model Salary {
  id                   Int      @id @default(autoincrement())
  timestamp            Int
  level                Int
  step                 Int
  totalSalary          Int
  lastChangePercentage Int
  lastChangeAmount     Int
  employeeId           Int
  employee             Employee @relation(fields: [employeeId], references: [id])
}
