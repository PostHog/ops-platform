generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Employee {
  id       String   @id @default(cuid())
  name     String
  priority Priority
  reviewer String
  reviewd  Boolean
  salaries Salary[]
}

enum Priority {
  low
  high
  medium
}

model Salary {
  id                   String   @id @default(cuid())
  timestamp            DateTime
  locationFactor       Float
  level                Float
  step                 Float
  benchmark            Int
  totalSalary          Int
  changePercentage     Float
  changeAmount         Int
  exchangeRate         Float
  totalSalaryLocal     Int
  amountTakenInOptions Int
  actualSalary         Int
  actualSalaryLocal    Int
  notes                String
  employeeId           String
  employee             Employee @relation(fields: [employeeId], references: [id])
}
