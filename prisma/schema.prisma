generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Employee {
  id       Int      @id @default(autoincrement())
  name     String
  priority Priority
  reviewer String
  reviewd  Boolean
  salaries Salary[]
}

enum Priority {
  low
  high
  medium
}

model Salary {
  id                   Int      @id @default(autoincrement())
  timestamp            DateTime
  locationFactor       Float
  level                Float
  step                 Float
  benchmark            Int
  totalSalary          Int
  lastChangePercentage Float
  lastChangeAmount     Int
  exchangeRate         Float
  totalSalaryLocal     Int
  amountTakenInOptions Int
  actualSalary         Int
  actualSalaryLocal    Int
  notes    String
  employeeId           Int
  employee             Employee @relation(fields: [employeeId], references: [id])
}
